---
const { title, href, blurb, tags = [], imgSrc = '/images/placeholder.png', imgAlt = '' } = Astro.props;
---
<a href={href} target="_blank" rel="noopener" class="card" aria-label={`Open ${title}`}>
  <img class="thumb" src={imgSrc} alt={imgAlt} />
  <div class="body">
    <h3><a href={href} target="_blank" rel="noopener">{title}</a></h3>
    <p>{blurb}</p>
    <div class="tags">
      {tags.map(t => <span class="badge">{t}</span>)}
    </div>
  </div>
  <div class="cta">
    <a class="view" href={href} target="_blank" rel="noopener">View Project</a>
  </div>
</a>
